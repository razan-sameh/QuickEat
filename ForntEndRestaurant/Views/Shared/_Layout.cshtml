@{
    var quote = "Lorem ipsum dolor sit amet consectetur adipisicing elit. Fugit error ex totam aliquid, sed labore atque possimus consectetur architecto sequi repellendus molestiae sit reiciendis perspiciatis natus repellat et dolorum facilis?";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QUICKEAT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
@*    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
*@    <link rel="stylesheet" href="~/css/SiteUpdate.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Home.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/Order.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ForntEndRestaurant.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="logo navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">QUICK<span>EAT</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="CategoryBack" asp-action="Index">All Categories</a>                       
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="RestaurantBack" asp-action="Index">All Resturant</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                    <button class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="OrderFront" asp-action="Create">Order Now</a>
                    </button>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer ">
        <div class="container text-center">
            <div class="row">
                <div class="col first-col">
                    <div class="footer-contant">
                    <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">QUICK<span>EAT</span></a>
                    <h2>The Best Restaurants in Your Home</h2>
                        <p>@quote</p>
                    </div>
                   </div>
                <div class="col">
                        <h4>Menu</h4>
                        <ul class="footer-menu">
                        <li class="footer-item">
                                <a  asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                        <li class="footer-item">
                                <a  asp-area="" asp-controller="CategoryBack" asp-action="Index">All Categories</a>
                            </li>
                        <li class="footer-item">
                                <a  asp-area="" asp-controller="RestaurantBack" asp-action="Index">All Resturant</a>
                            </li>
                        </ul>
                </div>
            </div>
        </div>
        <div class="container text-muted">
            &copy; 2023 - QUICKEAT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
